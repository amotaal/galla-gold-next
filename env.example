# /.env.example
# Environment Variables Template for GALLA.GOLD Next.js Application
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# The base URL of your application (used for callbacks and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string for MongoDB Atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gallagold?retryWrites=true&w=majority

# Optional: MongoDB database name (defaults to 'gallagold')
MONGODB_DB=gallagold

# =============================================================================
# AUTHENTICATION (Auth.js / NextAuth.js)
# =============================================================================
# Secret key for encrypting JWT tokens and session cookies
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-super-secret-key-min-32-chars

# Auth.js configuration
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
# Resend API key for sending transactional emails
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email sender address (must be verified domain in Resend)
RESEND_FROM_EMAIL=noreply@gallagold.com
RESEND_FROM_NAME=GALLA.GOLD

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Default locale for the application
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supported locales (comma-separated)
NEXT_PUBLIC_LOCALES=en,es,fr,ru,ar

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_KYC=true
NEXT_PUBLIC_ENABLE_PHYSICAL_DELIVERY=true

# =============================================================================
# EXTERNAL APIs (Future Integration)
# =============================================================================
# Gold price API (for real-time gold prices)
GOLD_PRICE_API_URL=https://api.example.com/gold-price
GOLD_PRICE_API_KEY=your-api-key-here

# Payment processor (Stripe, PayPal, etc.)
PAYMENT_PROVIDER=stripe
PAYMENT_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYMENT_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# JWT token expiration times
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_VERIFICATION_TOKEN_EXPIRY=24h

# Rate limiting (requests per window)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug logging
DEBUG=false

# Disable email sending in development (log to console instead)
DISABLE_EMAIL_SENDING=false

# =============================================================================
# PRODUCTION SETTINGS (Only for production environment)
# =============================================================================
# Production database (separate from development)
# MONGODB_URI_PROD=mongodb+srv://prod-user:prod-pass@prod-cluster.mongodb.net/gallagold-prod

# Production auth secret (different from development)
# AUTH_SECRET_PROD=your-production-secret-key-min-32-chars

# Analytics and monitoring
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
